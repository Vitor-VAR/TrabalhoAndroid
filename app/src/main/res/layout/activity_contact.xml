<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iesb.android1.trabalho.ContactActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">>

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:gravity="left"
            android:text="AGENDA DO"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="81dp"
            android:layout_height="37dp"
            android:textSize="20dp" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <Button
                android:id="@+id/btDark_Home"
                android:layout_width="55dp"
                android:layout_height="33dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Dark"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btLight_Home"
                android:layout_width="55dp"
                android:layout_height="33dp"
                android:text="Light"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btSO_Home"
                android:layout_width="55dp"
                android:layout_height="33dp"
                android:text="S.O"
                android:textSize="10dp" />

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etNome_Home"
            android:hint="Nome"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etTel"
            android:hint="Telefone"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"/>

    <Button
        android:id="@+id/btIncluir_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INCLUIR"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>


