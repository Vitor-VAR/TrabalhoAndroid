<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iesb.android1.trabalho.trabalho.HomeActivity"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvHome"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="AGENDA DE CONTATOS"
        android:textSize="26dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="174dp"
            android:layout_height="70dp"
            android:textSize="26dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <Button
                android:id="@+id/btDark_Home"
                android:layout_width="65dp"
                android:text="Dark" />

            <Button
                android:id="@+id/btLight_Home"
                android:layout_width="65dp"
                android:text="Light" />

            <Button
                android:id="@+id/btSO_Home"
                android:layout_width="65dp"
                android:text="SO" />

        </GridLayout>


    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etNome_Home"
            android:hint="Nome"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etTel"
            android:hint="Telefone"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"/>

    <Button
        android:id="@+id/btIncluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INCLUIR"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>


